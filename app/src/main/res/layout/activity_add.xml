<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/addtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add PDF"
            android:textAllCaps="false"
            android:textSize="30sp" />

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/addtitle"
            android:background="#5c46db" />

        <TextView
            android:id="@+id/topiclabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/addtitle"
            android:layout_marginTop="20dp"
            android:text="Topic Name:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/topicedit"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator"
            android:layout_alignEnd="@id/topiclabel"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:layout_marginRight="45dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/uploadbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/topiclabel"
            android:text="Upload PDF" />


        <include layout="@layout/activity_navbar" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>